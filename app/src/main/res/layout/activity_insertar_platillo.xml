<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertarPlatilloActivity">

    <TextView
        android:id="@+id/txtAnadirPlatillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="137dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="26dp"
        android:text="Añadir Platillo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNombrePlatillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNombrePlatillo"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="136dp"
        android:background="@drawable/borde"
        android:ems="10"
        android:hint=" Nombre del platillo"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtPrecioPlatillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAnadirPlatillo" />

    <EditText
        android:id="@+id/txtIngredientesPlatillo"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/borde"
        android:ems="10"
        android:hint=" Ingredientes del platillo"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnAnadirPlatillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPrecioPlatillo" />

    <EditText
        android:id="@+id/txtPrecioPlatillo"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="136dp"
        android:background="@drawable/borde"
        android:ems="10"
        android:hint=" Precio del platillo"
        android:inputType="number|numberDecimal"
        android:numeric="decimal"
        app:layout_constraintBottom_toTopOf="@+id/txtIngredientesPlatillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombrePlatillo" />

    <Button
        android:id="@+id/btnAnadirPlatillo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="136dp"
        android:onClick="clickBtnAnadirPlatillo"
        android:text="Añadir Platillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIngredientesPlatillo" />

    <Button
        android:id="@+id/btnCancelar1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="136dp"
        android:onClick="clickBtnCancelar1"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnadirPlatillo" />

</androidx.constraintlayout.widget.ConstraintLayout>