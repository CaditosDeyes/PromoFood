<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TituloResumen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerPedidosClienteActivity">

    <TableRow
        android:id="@+id/tableRowEstatus"
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/borde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TituloPedidosRow">

        <TextView
            android:id="@+id/TituloEstatus"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/borde"
            android:gravity="center"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textValorEstatus"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/borde"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRowHora"
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/borde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRowEstatus">

        <TextView
            android:id="@+id/TituloHora"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/borde"
            android:gravity="center"
            android:text="Hora Entrega"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textValorHora"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/borde"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRowPrecio"
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/borde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRowHora">

        <TextView
            android:id="@+id/TituloPrecioFinal"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/borde"
            android:gravity="center"
            android:text="Precio Final"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textValorPrecioFinal"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/borde"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp" />
    </TableRow>

    <TextView
        android:id="@+id/textValorResumen"
        android:layout_width="156dp"
        android:layout_height="180dp"
        android:background="@drawable/borde"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tableRowHora"
        app:layout_constraintTop_toBottomOf="@+id/TituloResumen1" />

    <TextView
        android:id="@+id/TituloResumen1"
        android:layout_width="156dp"
        android:layout_height="90dp"
        android:background="@drawable/borde"
        android:gravity="center"
        android:text="Resumen:"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/tableRowEstatus"
        app:layout_constraintTop_toBottomOf="@+id/TituloPedidosRow" />

    <TableRow
        android:id="@+id/TituloPedidosRow"
        android:layout_width="386dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/borde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TituloPedidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="PEDIDOS PENDIENTES"
            android:textColor="@color/black"
            android:textSize="34sp" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>