<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerPedidosRestauranteActivity">

    <TableRow
        android:id="@+id/TituloPedidosRow"
        android:layout_width="386dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/borde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TituloPedidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="PEDIDOS PENDIENTES"
            android:textColor="@color/black"
            android:textSize="34sp" />
    </TableRow>

    <ScrollView
        android:id="@+id/bac"
        android:layout_width="386dp"
        android:layout_height="280dp"
        android:background="@drawable/borde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TituloPedidosRow">

        <TableLayout
            android:id="@+id/tbPedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>