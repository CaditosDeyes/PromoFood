<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtBienvenido"
        android:layout_width="264dp"
        android:layout_height="57dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Bienvenido!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/txtPorFavorCreaTuPrimerMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNombreMenu"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/borde"
        android:ems="10"
        android:hint=" Nombre del menú"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPorFavorCreaTuPrimerMenu" />

    <TextView
        android:id="@+id/txtPorFavorCreaTuPrimerMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="136dp"
        android:text="Por favor, crea tu primer menú"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBienvenido" />

    <Button
        android:id="@+id/btnCrearMenu"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="250dp"
        android:onClick="btnCrearMenu"
        android:text="Crear Menú"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/btnCancelar1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreMenu" />

    <Button
        android:id="@+id/btnCancelar1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="136dp"
        android:onClick="clickBtnCancelar"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCrearMenu" />

</androidx.constraintlayout.widget.ConstraintLayout>