<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesRestauranteActivity">


    <ScrollView
        android:id="@+id/scrollViewPlatillos"
        android:layout_width="386dp"
        android:layout_height="229dp"
        android:background="@drawable/borde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow8">

        <LinearLayout
            android:layout_width="399dp"
            android:layout_height="476dp"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tbPlatillos"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <TableRow
        android:id="@+id/rowBotones"
        android:layout_width="362dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickBtnVerCarrito"
            app:srcCompat="@mipmap/carrito" />

        <ImageButton
            android:id="@+id/btnAjustes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ajustes" />

    </TableRow>

    <ScrollView
        android:id="@+id/scrollViewBebidas"
        android:layout_width="386dp"
        android:layout_height="229dp"
        android:background="@drawable/borde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow9">

        <LinearLayout
            android:layout_width="399dp"
            android:layout_height="476dp"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tbBebidas"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/borde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tituloPlatillos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="Platillos"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow9"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/borde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewPlatillos">

        <TextView
            android:id="@+id/tituloBebidas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="Bebidas"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>